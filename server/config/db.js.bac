const mongoose = require('mongoose');

const dbConnection = () => {
  mongoose
    .connect(process.env.MyServerDB)
    .then((conn) => {
      console.log(`Database Connected: ${conn.connection.host}`);
    })
  // .catch((err) => {
  //   console.error(`Database connection Error: ${err}`);
  //   process.exit(1);
  // });
};

module.exports = dbConnection;
